<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@color/layoutBackground"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ochieng_derrick.appone.MainActivity">

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:background="@color/editTextBackground"
        android:id="@+id/numTwo"
        android:layout_alignBaseline="@+id/numOne"
        android:layout_alignBottom="@+id/numOne"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

    <TextView
        android:text="Hello World, Android Calculator!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:textColor="@color/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="5"
        android:background="@color/editTextBackground"
        android:id="@+id/numOne"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/tvTitle"
        android:layout_toLeftOf="@+id/numTwo"
        android:layout_toStartOf="@+id/numTwo"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <Button
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:id="@+id/add"
        android:layout_below="@+id/numOne"
        android:layout_alignLeft="@+id/numOne"
        android:layout_alignStart="@+id/numOne" />

    <Button
        android:text="SUB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub"
        android:layout_alignBaseline="@+id/add"
        android:layout_alignBottom="@+id/add"
        android:layout_alignRight="@+id/numTwo"
        android:layout_alignEnd="@+id/numTwo" />
</RelativeLayout>
